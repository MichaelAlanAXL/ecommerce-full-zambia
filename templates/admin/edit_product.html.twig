{% block content %}
<div class="container">
    <h2 class="mb-4">Editar Produto</h2>

    <form method="POST" action="/admin/produtos/{{ product.idproduct }}/editar" class="form-product">
        <div class="form-group">
            <label for="desproduct">Nome do Produto</label>
            <input type="text" id="desproduct" name="desproduct" class="form-control"
                   value="{{ product.desproduct }}" required>
        </div>

        <div class="form-group">
            <label for="vlprice">Preço</label>
            <input type="number" id="vlprice" name="vlprice" class="form-control"
                   step="0.01" min="0" value="{{ product.vlprice }}" required>
        </div>

        <div class="form-group">
            <label for="vlwidth">Largura (cm)</label>
            <input type="number" id="vlwidth" name="vlwidth" class="form-control"
                   step="0.01" min="0" value="{{ product.vlwidth }}" required>
        </div>

        <div class="form-group">
            <label for="vlheight">Altura (cm)</label>
            <input type="number" id="vlheight" name="vlheight" class="form-control"
                   step="0.01" min="0" value="{{ product.vlheight }}" required>
        </div>

        <div class="form-group">
            <label for="vllength">Comprimento (cm)</label>
            <input type="number" id="vllength" name="vllength" class="form-control"
                   step="0.01" min="0" value="{{ product.vllength }}" required>
        </div>

        <div class="form-group">
            <label for="vlweight">Peso (kg)</label>
            <input type="number" id="vlweight" name="vlweight" class="form-control"
                   step="0.01" value="{{ product.vlweight }}" required>
        </div>

        <div class="form-group">
            <label for="url">URL Amigável</label>
            <input type="text" id="url" name="url" class="form-control"
                   value="{{ product.url }}" required>
        </div>

        <div class="form-group">
            <label for="idcategory">Categoria</label>
            <select id="idcategory" name="idcategory" class="form-control" required>
                {% for cat in categories %}
                    <option value="{{ cat.idcategory }}" {% if cat.idcategory == product.idcategory %}selected{% endif %}>
                        {{ cat.descategory }}
                    </option>
                {% endfor %}
            </select>
        </div>

        <div class="mt-3">
            <button type="submit" class="btn btn-edit">Salvar Alterações</button>
            <a href="/admin/produtos" class="btn btn-delete">Cancelar</a>
        </div>
    </form>
</div>
{% endblock %}
