{% block content %}
<div class="container">
    <h2 class="mb-4">{{ title|default('Novo Produto') }}</h2>

    <form action="/admin/produtos/novo" method="POST" class="form-product">
        <div class="form-group">
            <label for="desproduct">Nome do Produto</label>
            <input type="text" id="desproduct" name="desproduct" class="form-control" required>
        </div>

        <div class="form-group">
            <label for="vlprice">Preço</label>
            <input type="number" id="vlprice" name="vlprice" class="form-control" step="0.01" required>
        </div>

        <div class="form-group">
            <label for="vlwidth">Largura (cm)</label>
            <input type="number" id="vlwidth" name="vlwidth" class="form-control" step="0.01" min="0" required>
        </div>

        <div class="form-group">
            <label for="vlheight">Altura (cm)</label>
            <input type="number" id="vlheight" name="vlheight" class="form-control" step="0.01" min="0" required>
        </div>

        <div class="form-group">
            <label for="vllength">Comprimento (cm)</label>
            <input type="number" id="vllength" name="vllength" class="form-control" step="0.01" min="0" required>
        </div>

        <div class="form-group">
            <label for="vlweight">Peso (kg)</label>
            <input type="number" id="vlweight" name="vlweight" class="form-control" step="0.01" required>
        </div>

        <div class="form-group">
            <label for="url">URL Amigável</label>
            <input type="text" id="url" name="url" class="form-control" placeholder="ex: meu-produto" required>
        </div>

        <div class="form-group">
            <label for="idcategory">Categoria</label>
            <select id="idcategory" name="idcategory" class="form-control" required>
                <option value="">Selecione</option>
                {% for cat in categories %}
                    <option value="{{ cat.idcategory }}">{{ cat.descategory }}</option>
                {% endfor %}
            </select>
        </div>

         <div class="form-group">
            <label>
                <input type="checkbox" name="is_active" value="1" {% if product.is_active is defined and product.is_active %}checked{% endif %}>
                Exibir no site
            </label>
        </div>

        <div class="mt-3">
            <button type="submit" class="btn btn-new">Salvar Produto</button>
            <a href="/admin/produtos" class="btn btn-delete">Cancelar</a>
        </div>
    </form>
</div>
{% endblock %}